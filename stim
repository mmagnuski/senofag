clock = core.Clock()
keepLooping = True
while keepLooping:
    for img in [tleft, pleft]:
        if keepLooping:
            for frameN in range(1):
                img.draw()
                win.flip()
                keys = event.getKeys(keyList=['space', 'escape'])
                if keys:
                    rt = clock.getTime()
                    keepLooping = False
                    print "rt = ", rt
                    break
